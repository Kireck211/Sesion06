<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    tools:context=".ActivityNoMaterial">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/activity_no_material_tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actividad sin material"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/activity_no_material_btn_click"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/activity_no_material_btn_click"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Click Aqui!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_no_material_tv_text" />

</androidx.constraintlayout.widget.ConstraintLayout>